@model IEnumerable<InventoryMS.Models.InventoryItem>

@{
    ViewData["Title"] = "Products in Stock";
}

<h1>Products in Stock</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Selling Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.Quantity</td>
                <td>@product.SellingPrice.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
