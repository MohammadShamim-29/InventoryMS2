<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryPOS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryPOS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-uppercase" asp-area="" asp-controller="Home" asp-action="Index">InventoryPOS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
                <div class="text-light">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index">Hello, @User.Identity.Name!</a>
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link text-light">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark text-light sidebar vh-100 shadow-lg">
                <div class="position-sticky">
                    <div class="text-center py-4">
                        <h4 class="fw-bold text-uppercase">Admin Panel</h4>
                        <hr class="text-secondary" />
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold @(ViewData["Title"] == "Sales Dashboard" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> DASHBOARD
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" data-bs-toggle="collapse" href="#productMenu" role="button" aria-expanded="false" aria-controls="productMenu">
                                <i class="bi bi-box-seam"></i> PRODUCT
                            </a>
                            <div class="collapse" id="productMenu">
                                <ul class="list-unstyled ps-3">
                                    <li><a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="AddProduct">Add</a></li>
                                    <li><a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="ViewProducts">View</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" data-bs-toggle="collapse" href="#saleMenu" role="button" aria-expanded="false" aria-controls="saleMenu">
                                <i class="bi bi-cart"></i> SALES
                            </a>
                            <div class="collapse" id="saleMenu">
                                <ul class="list-unstyled ps-3">
                                    <li><a class="nav-link text-light" asp-area="" asp-controller="Sale" asp-action="AddSale">Add</a></li>
                                    <li><a class="nav-link text-light" asp-area="" asp-controller="Sale" asp-action="ViewSales">View</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" data-bs-toggle="collapse" href="#purchaseMenu" role="button" aria-expanded="false" aria-controls="purchaseMenu">
                                <i class="bi bi-bag"></i> PURCHASES
                            </a>
                            <div class="collapse" id="purchaseMenu">
                                <ul class="list-unstyled ps-3">
                                    <li><a class="nav-link text-light" asp-area="" asp-controller="Purchase" asp-action="AddPurchase">Add</a></li>
                                    <li><a class="nav-link text-light" asp-area="" asp-controller="Purchase" asp-action="ViewPurchases">View</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="pb-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
